{
  "name": "cs-styles",
  "version": "0.5.0",
  "description": "styles",
  "main": "css/styles.css",
  "scripts": {
    "build": "sass --no-source-map --style expanded --no-error-css scss/:css/ && copyfiles css/cs-styles.css examples",
    "demo": "live-server ./examples",
    "watch": "nodemon -q --watch scss/ --ext scss --exec run-s build",
    "dev": "npm-run-all --parallel demo watch"
  },
  "keywords": [
    "css",
    "css-framework",
    "lightweight",
    "minimalistic"
  ],
  "engines": {
    "node": ">=18.17.0"
  },
  "browserslist": [
    "defaults"
  ],
  "author": "Oleh Obydonov",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "css-declaration-sorter": "^7.1.1",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.2.5",
    "sass": "^1.72.0",
    "standard": "^17.1.0"
  }
}
